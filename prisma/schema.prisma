// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  rents     Rent[]
  wallets   Wallet[]
}

model Video {
  id           String     @id @default(uuid())
  title        String
  type         VideoType
  maxAge       Int?
  yearReleased Int?
  genre        VideoGenre
  price        Price?
  rents        Rent[]
}

model Price {
  id            String @id @default(uuid())
  regular       Int?
  childrenMovie Int?
  newRelease    Int?
  video         Video  @relation(fields: [videoId], references: [id])
  videoId       String @unique
}

model Rent {
  id         String @id @default(uuid())
  userName   String
  videoTitle String
  noOfDays   Int
  user       User   @relation(fields: [userId], references: [id])
  userId     String
  video      Video  @relation(fields: [videoId], references: [id])
  videoId    String

  @@unique([userId, videoId])
}

model Wallet {
  id       String   @id @default(uuid())
  balance  BigInt   @default(0)
  currency Currency
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String

  @@unique([userId, currency])
}

enum VideoType {
  regular
  children_movie
  new_release
}

enum VideoGenre {
  action
  drama
  romance
  comedy
  horror
}

enum Currency {
  NGN
  USD
}
